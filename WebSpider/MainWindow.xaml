<Window x:Class="WebSpider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebSpider"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid >
        <TextBox x:Name="SearchQuerytextBox" HorizontalAlignment="Stretch" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Text="Введите поисковый запрос" VerticalAlignment="Top" Background="Red" />
        <ListBox x:Name="SearchResultslistBox" Margin="15,56,10,35" ItemsSource="{Binding}">
            <ListBox.ItemTemplate>
        <DataTemplate DataType="String">
            <TextBlock>
                <Hyperlink NavigateUri="{Binding}" Click="Hyperlink_RequestNavigate">
                    <TextBlock Text="{Binding}" />
                </Hyperlink>
            </TextBlock>
        </DataTemplate>
    </ListBox.ItemTemplate>
</ListBox>
        <Button x:Name="SearchButton" Content="Искать" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="SearchButton_Click"/>
    </Grid>
</Window>
